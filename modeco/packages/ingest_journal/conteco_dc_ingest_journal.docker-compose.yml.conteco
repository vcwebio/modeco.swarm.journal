---
version: '3'
services:

# START SERVICE journalbeat.base
  journalbeat:
    image: ${CONTECO_REGISTRY}${CONTECO_REALM_RUNTIME}/conteco.journalbeat.base:7.9.2
    environment: ['ES_JOURNALBEAT_FILEPATHS=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_FILEPATHS}','ES_JOURNALBEAT_SEEK=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_SEEK}','ES_JOURNALBEAT_INCLUDE_MATCHES=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_INCLUDE_MATCHES}','ES_JOURNALBEAT_OUTPUT_CONSOLE=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONSOLE}','ES_JOURNALBEAT_OUTPUT_ELASTICSEARCH=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_ELASTICSEARCH}','ES_JOURNALBEAT_OUTPUT_LOGSTASH=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_LOGSTASH}','ES_JOURNALBEAT_OUTPUT_KAFKA=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_KAFKA}','ES_JOURNALBEAT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS}','ES_JOURNALBEAT_OUTPUT_CONFIG_ELASTICSEARCH_INDEX=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_INDEX}','ES_JOURNALBEAT_OUTPUT_CONFIG_LOGSTASH_HOSTS=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_LOGSTASH_HOSTS}','ES_JOURNALBEAT_OUTPUT_CONFIG_LOGSTASH_INDEX=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_LOGSTASH_INDEX}','ES_JOURNALBEAT_OUTPUT_CONFIG_KIBANA_HOST=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_HOST}','ES_JOURNALBEAT_OUTPUT_CONFIG_KIBANA_DASHBOARDS=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_DASHBOARDS}','ES_JOURNALBEAT_OUTPUT_CONFIG_KAFKA_HOSTS=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_HOSTS}','ES_JOURNALBEAT_OUTPUT_CONFIG_KAFKA_TOPIC=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_TOPIC}','ES_JOURNALBEAT_LOGGING_LEVEL=${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_LOGGING_LEVEL}']
    command: []
    volumes: ['${CONTECO_STACKPREFIX}_journalbeat_volume:/usr/share/journalbeat/data','/etc:/hostfs/etc:ro'${CONTECO_DC_INGEST_JOURNAL_ENVIRONMENT_FILEPATHS_MAPPING}]
    ports: []
    networks: [${CONTECO_NETWORKLOCAL}_overlay]
    deploy:
      mode: ${CONTECO_DC_INGEST_JOURNAL_DEPLOY_MODE}
      resources:
        limits:
          memory: '${CONTECO_DC_INGEST_JOURNAL_DEPLOY_RESOURCES_LIMITS_MEMORY}'
        reservations:
          memory: '${CONTECO_DC_INGEST_JOURNAL_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}'
${CONTECO_DC_INGEST_JOURNAL_COMPOSE_EXTENSIONS}
# END SERVICE journalbeat.base

networks: {${CONTECO_NETWORKLOCAL}_overlay: { external: true }}
volumes: {${CONTECO_STACKPREFIX}_journalbeat_volume: { external: true }}
${CONTECO_DC_GLOBAL_COMPOSE_EXTENSIONS}
